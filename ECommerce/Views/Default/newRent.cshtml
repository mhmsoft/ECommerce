@model ECommerce.Areas.Management.Models.Entities.Rent

@Html.Partial("~/Views/_shared/_header.cshtml");

@*BREADCUMB*@

<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Araba Kirala</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Seçtiğiniz tarihlerde istediğiniz arabayı kiralayabilirsiniz.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>


    <section id="car-list-area" class="section-padding">

        <div class="container">
            <div class="row">

                <div class="col-lg-8">
                    <div class="car-list-content m-t-50">
                        <!-- Single Car Start -->
                        <div class="single-car-wrap">
                            <div class="row">
                                <!-- Single Car Thumbnail -->
                                <div class="col-lg-5">
                                    <div class="car-list-thumb car-thumb-1">

                                        <img style="width:100%;height:100%;" src="data:image/png;base64,@Convert.ToBase64String(Model.Product.image)" />

                                    </div>
                                </div>
                                <!-- Single Car Thumbnail -->
                                <!-- Single Car Info -->
                                <div class="col-lg-7">

                                   
                                    <div class="display-table">
                                        <form method="post" action="@Url.Action("newRent","Default")">
                                            <div class="display-table-cell">
                                                <div class="car-list-info">
                                                    @Html.AntiForgeryToken()
                                                    @Html.HiddenFor(model => model.productId)
                                                    <h5>@Model.Product.dailyPrice ₺  /Günlük</h5>

                                                    <ul class="car-info-list">
                                                        <li>
                                                            @Html.LabelFor(model => Model.rentStartDate)
                                                            @Html.EditorFor(model => model.rentStartDate)
                                                        </li>
                                                        <li>
                                                            @Html.LabelFor(model => Model.rentEndDate)
                                                            @Html.EditorFor(model => model.rentEndDate)
                                                        </li>

                                                    </ul>

                                                    <button class="rent-btn">Kirala</button>



                                                </div>
                                            </div>
                                        </form>
                                        <!--Mesaj panosu-->
                                        <div class="log-btn">
                                            @if (ViewBag.Status == true)
                                            {
                                                <div class="alert alert-success">
                                                    <strong>Tebrikler!</strong>@ViewBag.Message
                                                </div>
                                            }
                                            else
                                            {
                                                if (ViewBag.Message != null)
                                                {
                                                    <div class="alert alert-danger">
                                                        <strong>Hata!</strong>@ViewBag.Message
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>

                                </div>
                                <!-- Single Car info -->
                            </div>
                        </div>
                        <!-- Single Car End -->

                    </div>



                </div>

            </div>
        </div>

    </section>


@Html.Partial("~/Views/_shared/_footer.cshtml");



