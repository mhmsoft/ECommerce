@model ECommerce.Areas.Management.Models.Entities.Product
    @Html.Partial("~/Views/_shared/_header.cshtml");
    <section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
                <!-- Page Title Start -->
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        <h2>Detay</h2>
                        <span class="title-line"><i class="fa fa-car"></i></span>
                        <p>Seçtiğiniz arabanın detayını görebilirsiniz.</p>
                    </div>
                </div>
                <!-- Page Title End -->
            </div>
        </div>
    </section>
    <section id="car-list-area" class="section-padding">
        <div class="container">
            <div class="row">
                <!-- Car List Content Start -->
                <div class="col-lg-8">
                    <div class="car-details-content">
                        <h2>@Model.Name <span class="price">Günlük: <b>@Model.dailyPrice ₺</b></span></h2>
                        <div class="">
                            <div class="single-car-preview">
                                <img style="width:100%; height:100%;" src="data:image/png;base64,@Convert.ToBase64String(Model.image)" alt="JSOFT">
                            </div>
                        </div>
                        <div class="car-details-info">
                            <h4>Açıklama</h4>
                            <p>@Model.description</p>

                            <div class="technical-info">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="tech-info-table">
                                            <table class="table table-bordered">
                                                <tr>
                                                    <th>Vites</th>
                                                    <td>@Model.GearType</td>
                                                </tr>
                                                <tr>
                                                    <th>Yakıt</th>
                                                    <td>@Model.FuelType</td>
                                                </tr>
                                                <tr>
                                                    <th>Sınıf</th>
                                                    <td>@Model.ClassType</td>
                                                </tr>
                                                <tr>
                                                    <th>Model Yılı</th>
                                                    <td>@Model.autoModelYear</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="tech-info-list">
                                            <ul>
                                                @if (Model.SubModel.AirBag)
                                                {
                                                    <li>Airbag</li>
                                                }
                                                @if (Model.SubModel.Navigation)
                                                {
                                                    <li>GPS</li>
                                                }
                                                @if (Model.SubModel.ChildLock)
                                                {
                                                    <li>ChildLock</li>
                                                }
                                                @if (Model.SubModel.Sunroof)
                                                {
                                                    <li>Sunroof</li>
                                                }
                                                @if (Model.SubModel.CDMp3)
                                                {
                                                    <li>Cd/MP3</li>
                                                }
                                                @if (Model.SubModel.Bluetooth)
                                                {
                                                    <li>Bluetooth</li>
                                                }

                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @*Eğer hiç bir yorum yoksa*@
                            @if (Model.Comment.Count == 0)
                            {
                                Model.Comment.Add(
                                    new ECommerce.Areas.Management.Models.Entities.comment() { productId = Model.Id }
                                     );
                            }
                            @Html.Partial("Comments", Model.Comment)
                        </div>
                    </div>
                </div>
                <!-- Car List Content End -->
                <!-- Sidebar Area Start -->
                <div class="col-lg-4">
                    <div class="sidebar-content-wrap m-t-50">
                        <!-- Single Sidebar Start -->
                        <div class="single-sidebar">
                            <h3>For More Informations</h3>

                            <div class="sidebar-body">
                                <p><i class="fa fa-mobile"></i> +8801816 277 243</p>
                                <p><i class="fa fa-clock-o"></i> Mon - Sat 8.00 - 18.00</p>
                            </div>
                        </div>
                        <!-- Single Sidebar End -->
                        <!-- Single Sidebar Start -->
                        <div class="single-sidebar">
                            <h3>Rental Tips</h3>

                            <div class="sidebar-body">
                                <ul class="recent-tips">
                                    <li class="single-recent-tips">
                                        <div class="recent-tip-thum">
                                            <a href="#"><img src="assets/img/we-do/service1-img.png" alt="JSOFT"></a>
                                        </div>
                                        <div class="recent-tip-body">
