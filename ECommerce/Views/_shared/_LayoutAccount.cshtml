@model ECommerce.Areas.Management.Models.Entities.Customer
@Html.Partial("~/Views/_shared/_header.cshtml");
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Hesabım</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Üyelerin kendi bilgilerinin görebildiği yer.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>

<section id="car-list-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Sidebar Area Start -->
            <div class="col-lg-4">
                <div class="sidebar-content-wrap">
                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>Hoşgeldiniz</h3>

                        <div class="sidebar-body">
                            <p><i class="fa fa-user"></i>@(Model.firstName + " " + Model.lastName)  </p>
                            <p><i class="fa fa-mobile"></i>@Model.phone</p>
                            <p><i class="fa fa-mail-forward"></i>@Model.email</p>
                            <p><i class="fa fa-clock-o"></i>@Model.loginTime</p>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->
                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>Benim Menüm</h3>

                        <div class="sidebar-body">
                            <ul class="recent-tips">
                                <li class="single-recent-tips">
                                    <div class="recent-tip-body">
                                        <h4><a href="@Url.Action("MyProfile","Account")">Profilim</a></h4>
                                    </div>
                                </li>
                                <li class="single-recent-tips">
                                    <div class="recent-tip-body">
                                        <h4><a href="@Url.Action("changePassword","Account")">Şifre Değiştir</a></h4>
                                    </div>
                                </li>
                                <li class="single-recent-tips">
                                    <div class="recent-tip-body">
                                        <h4><a href="@Url.Action("MyWishlist","Account")">Beğendiklerim</a></h4>
                                    </div>
                                </li>
                                <li class="single-recent-tips">
                                    <div class="recent-tip-body">
                                        <h4><a href="@Url.Action("MyRents","Account")">Kiraladıklarım</a></h4>
                                    </div>
                                </li>
                                <li class="single-recent-tips">
                                    <div class="recent-tip-body">
                                        <h4><a href="@Url.Action("Signout","Customer")">Güvenli Çıkış</a></h4>
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->
                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>Connect with Us</h3>

                        <div class="sidebar-body">
                            <div class="social-icons text-center">
                                <a href="#" target="_blank"><i class="fa fa-facebook"></i></a>
                                <a href="#" target="_blank"><i class="fa fa-twitter"></i></a>
                                <a href="#" target="_blank"><i class="fa fa-behance"></i></a>
                                <a href="#" target="_blank"><i class="fa fa-linkedin"></i></a>
                                <a href="#" target="_blank"><i class="fa fa-dribbble"></i></a>
                            </div>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->
                </div>
            </div>
            <!-- Sidebar Area End -->
            <!-- Car List Content Start -->
            <div class="col-lg-8">
                @RenderBody()
            </div>
            <!-- Car List Content End -->
        </div>
    </div>
</section>
@Html.Partial("~/Views/_shared/_footer.cshtml");

